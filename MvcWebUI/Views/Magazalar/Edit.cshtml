@model MagazaModel

@{
    ViewData["Title"] = "Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Mağaza</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Adi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Adi" class="form-control" />
					<span asp-validation-for="Adi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<label asp-for="SanalMi" class="col-2 col-form-label"></label>
				<div class="col-5" style="padding-top: 7px;">
					<input class="form-check-input" asp-for="SanalMi" />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Puani" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Puani" class="form-control" />
					<span asp-validation-for="Puani" class="text-danger"></span>
				</div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Kaydet" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Temizle</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Mağazalar</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
